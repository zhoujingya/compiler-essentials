  "version": "0.2.0",
  "configurations": [
    {
      "type": "cmake",
      "request": "launch",
      "name": "AddTinylang cmake debugger",
      "cmakeDebugType": "script",
      "scriptPath": "${workspaceFolder}/src/tinylang/cmake/modules/AddTinylang.cmake"
    },

    {
      "type": "lldb",
      "request": "launch",
      "name": "lexer driver",
      "program": "${workspaceFolder}/build/bin/tinylang-lexer",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "commandline",
      "program": "${workspaceFolder}/build/bin/commandline",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "smallcc",
      "program": "${workspaceFolder}/build/bin/smallcc",
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
